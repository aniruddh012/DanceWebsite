extend base.pug
block style 
    include ../static/css/contact.css
block username
    a(href=`/profile/${userid}`) #{username}
block action
    li #[a(href=`/${actionurl}`) #{actionname} ]
block content 
    div#container
        h1 Contact Us 
        form(action="/contact", method="post", id="contactForm") 
            input(type="text", name="name", placeholder="Enter your Name",  class="inputs")
            input(type="email", name="email", placeholder="Enter your Email", class="inputs")
            input(type="phone", name="phone", placeholder="Enter your Phone No.", class="inputs")
            textarea(name="address", placeholder="Enter your Address", class="textBox")
            textarea(name="more", placeholder="More About You", class="textBox")
            button(type="submit", id="btn")
